{
  "name": "lavoixdusoir",
  "version": "1.0.0",
  "description": "Application créative pour enfants - Journal, Écriture & Création",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"next dev\" \"node server/signaling.js\"",
    "dev:client": "next dev",
    "dev:server": "node server/signaling.js",
    "dev:electron": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "build:electron": "next build && electron-builder",
    "start": "next start",
    "start:electron": "electron .",
    "lint": "next lint",
    "db:push": "supabase db push",
    "db:migrate": "supabase migration up"
  },
  "build": {
    "appId": "app.lavoixdusoir",
    "productName": "La Voix du Soir",
    "copyright": "Copyright © 2026",
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist",
      "extendInfo": {
        "NSAccessibilityUsageDescription": "La Voix du Soir a besoin de l'accès accessibilité pour le contrôle à distance mentor.",
        "NSScreenCaptureUsageDescription": "La Voix du Soir a besoin de capturer l'écran pour le partage avec le mentor."
      }
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "dist-electron"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.968.0",
    "@google/generative-ai": "^0.21.0",
    "@mux/mux-node": "^12.8.1",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@supabase/ssr": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "@tiptap/extension-color": "^3.15.3",
    "@tiptap/extension-font-family": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-text-align": "^3.15.3",
    "@tiptap/extension-text-style": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.0",
    "framer-motion": "^11.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "next-intl": "^4.7.0",
    "node-osascript": "^2.1.0",
    "openai": "^4.52.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "screenshot-desktop": "^1.15.3",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "tailwind-merge": "^2.3.0",
    "uuid": "^9.0.1",
    "ws": "^8.19.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/simple-peer": "^9.11.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.0",
    "dotenv": "^17.2.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.38",
    "supabase": "^1.200.0",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
