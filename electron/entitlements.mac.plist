<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Accès réseau pour la connexion mentor/enfant -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Accès accessibilité pour le contrôle à distance -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Capture d'écran -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Permet l'exécution de scripts AppleScript -->
    <key>com.apple.security.scripting-targets</key>
    <dict>
        <key>com.apple.systemevents</key>
        <array>
            <string>com.apple.systemevents.processes</string>
        </array>
    </dict>
</dict>
</plist>

